{
  "env": {
    "node": true,
    "es2021": true,
    "jest/globals": true
  },
  "ignorePatterns": ["dist/**/*.js"],
  "extends": [
    "airbnb-base",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "import/extensions": 0,
    "import/prefer-default-export": 0
  }
}
