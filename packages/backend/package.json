{
  "name": "@cartostory/backend",
  "version": "1.0.0",
  "description": "Cartostory backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "prod": "node dist/index.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/src/index.js\"",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "test": "CI=true FORCE_COLOR=true jest --forceExit --runInBand --detectOpenHandles --ci",
    "check:database": "node scripts/is-database-ready.js"
  },
  "author": "Michal Zimmermann <zimmicz@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@rearguard/is-email": "^1.7.1",
    "amqplib": "^0.8.0",
    "bcrypt": "^5.0.1",
    "fastify": "^3.19.2",
    "fastify-amqp": "^1.0.0",
    "fastify-jwt": "^3.0.0",
    "fastify-plugin": "^3.0.0",
    "knex": "^0.21.21",
    "uuid": "^8.3.2",
    "fastify-swagger": "~5.1.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/pg": "^8.6.1",
    "@types/superagent": "^4.1.12",
    "@types/uuid": "^8.3.1",
    "concurrently": "^7.1.0",
    "jest": "^27.0.6",
    "jest-date-mock": "^1.0.8",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.20",
    "pg": "^8.7.1",
    "superagent": "^6.1.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.6.3",
    "@rushstack/eslint-config": "~2.5.3",
    "eslint": "~8.13.0",
    "eslint-config-prettier": "~8.5.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
